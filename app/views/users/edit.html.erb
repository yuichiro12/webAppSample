<% provide(:title, "Edit Profile") %>
<h1>Edit Profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@user) do |f| %>
	  <%= f.label :name %>
	  <%= f.text_field :name, class: "form-control edit-input" %>

	  <%= f.label :comment %>
	  <%= f.text_area :comment, class: "form-control edit-input" %>

	  <%= f.label :image, "ユーザー画像" %>
      <%= f.file_field :image %>

	  <%= f.label :password %>
	  <%= f.password_field :password, class: "form-control edit-input" %>
	  
	  <%= f.submit "submit", class: "btn btn-primary" %>
	<% end %>
	<hr/>
	<%= link_to "delete your account", @user, method: :delete, data: {confirm: "本当に削除しますか？"},
	class: "btn btn-danger" %>
  </div>
</div>
